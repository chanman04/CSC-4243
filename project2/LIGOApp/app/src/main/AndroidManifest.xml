<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="interfacedesign.ligo.michael.ligoapp">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/main_activity_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.Activity1"
            android:label="@string/activity1_name">
        </activity>

        <activity
            android:name=".activities.Activity2"
            android:label="@string/activity2_name">
        </activity>

        <activity
            android:name=".activities.Activity3"
            android:label="@string/activity3_name">
        </activity>

        <activity
            android:name=".activities.Activity4"
            android:label="@string/activity4_name">
        </activity>

    </application>

</manifest>
